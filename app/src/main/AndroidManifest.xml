<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.intilock">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"></activity>
        <activity android:name=".RegisterActivity"></activity>
        <activity android:name=".RegisterActivity1"></activity>
        <activity android:name=".ResetPasswordActivity"></activity>
        <activity android:name=".SignUpActivity"></activity>
        <activity android:name=".UserLayout"></activity>
        <activity android:name=".MainDisplay"></activity>
        <activity android:name=".HeadLayout"></activity>
        <activity android:name=".IntruderActivity"></activity>
        <activity android:name=".ProfileActivity"></activity>
        <activity android:name=".ManagePeopleactivity"></activity>
        <activity android:name=".NotificationActivity"></activity>
        <activity android:name=".HomelineActivity"></activity>
        <activity android:name=".Profile1Activity"></activity>
        <activity android:name=".ThirdPartyActivity"></activity>


        <service
            android:name=".NetworkCheck"
            android:exported="false"/>

    </application>

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />



    <uses-permission android:name="android.permission.INTERNET" />

</manifest>